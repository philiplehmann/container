{
  "name": "puppeteer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/puppeteer/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/puppeteer",
        "format": [
          "cjs"
        ],
        "bundle": true,
        "main": "apps/puppeteer/src/main.ts",
        "tsConfig": "apps/puppeteer/tsconfig.app.json",
        "assets": [
          "apps/puppeteer/src/assets"
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "generateLockfile": true,
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "puppeteer:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "puppeteer:build:development"
        },
        "production": {
          "buildTarget": "puppeteer:build:production"
        }
      }
    },
    "lint": {
      "executor": "@container/biomejs:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "vitest": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "dependsOn": [
        "docker-test"
      ],
      "options": {}
    },
    "vitest-local": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ]
    },
    "e2e-install": {
      "executor": "@container/helper:e2e-install",
      "options": {}
    },
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "dependsOn": [
        "e2e-install",
        "docker-test"
      ],
      "options": {
        "testFiles": [
          "src/e2e/snapshot.spec.ts"
        ],
        "browser": "chromium",
        "skipInstall": true
      }
    },
    "e2e-local": {
      "executor": "@nx/playwright:playwright",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "testFiles": [
          "src/e2e/snapshot.spec.ts"
        ],
        "browser": "chromium"
      }
    },
    "test": {
      "executor": "@container/helper:empty",
      "dependsOn": [
        "e2e",
        "vitest"
      ],
      "options": {}
    },
    "test-local": {
      "executor": "@container/helper:empty",
      "dependsOn": [
        "e2e-local",
        "vitest-local"
      ]
    },
    "docker-test": {
      "executor": "@container/docker:test",
      "dependsOn": [
        "build"
      ],
      "options": {
        "tag": "philiplehmann/puppeteer:test",
        "file": "apps/puppeteer/Dockerfile"
      }
    },
    "docker-push": {
      "executor": "@container/docker:build",
      "dependsOn": [
        "build"
      ],
      "options": {
        "platforms": [
          "amd64",
          "arm64"
        ],
        "tags": [
          "philiplehmann/puppeteer:auto"
        ],
        "file": "apps/puppeteer/Dockerfile"
      }
    },
    "docker-run": {
      "executor": "@container/docker:run",
      "dependsOn": [
        "build"
      ],
      "options": {
        "image": "philiplehmann/puppeteer:run",
        "file": "apps/puppeteer/Dockerfile",
        "port": [
          "3000"
        ]
      }
    }
  }
}