{
  "name": "puppeteer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/puppeteer/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@container/bun:build",
      "options": {
        "entrypoints": ["{projectRoot}/src/main.ts"]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "puppeteer:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "puppeteer:build:development"
        },
        "production": {
          "buildTarget": "puppeteer:build:production"
        }
      }
    },
    "lint": {
      "executor": "@container/biomejs:lint",
      "outputs": ["{options.outputFile}"]
    },
    "typecheck": {
      "executor": "@container/tsc:typecheck"
    },
    "bun-test": {
      "executor": "@container/bun:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "dependsOn": ["docker-test"],
      "options": {}
    },
    "bun-test-local": {
      "executor": "@container/bun:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
    },
    "e2e-install": {
      "executor": "@container/helper:e2e-install",
      "options": {}
    },
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "dependsOn": ["e2e-install", "docker-test"],
      "options": {
        "testFiles": ["src/e2e/snapshot.spec.ts"],
        "browser": "chromium",
        "skipInstall": true
      }
    },
    "e2e-local": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "testFiles": ["src/e2e/snapshot.spec.ts"],
        "browser": "chromium"
      }
    },
    "test": {
      "executor": "@container/helper:empty",
      "dependsOn": ["e2e", "bun-test"],
      "options": {}
    },
    "test-local": {
      "executor": "@container/helper:empty",
      "dependsOn": ["e2e-local", "bun-test-local"]
    },
    "docker-test": {
      "executor": "@container/docker:test",
      "dependsOn": ["build"],
      "options": {
        "tag": "philiplehmann/puppeteer:test",
        "file": "apps/puppeteer/Dockerfile"
      }
    },
    "docker-push": {
      "executor": "@container/docker:build",
      "dependsOn": ["build"],
      "options": {
        "platforms": ["amd64", "arm64"],
        "tags": ["philiplehmann/puppeteer:auto"],
        "file": "apps/puppeteer/Dockerfile"
      }
    },
    "docker-run": {
      "executor": "@container/docker:run",
      "dependsOn": ["build"],
      "options": {
        "image": "philiplehmann/puppeteer:run",
        "file": "apps/puppeteer/Dockerfile",
        "port": ["3000"]
      }
    }
  }
}
