{
  "name": "pdftk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/pdftk/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@container/bun:build",
      "options": {
        "entrypoints": ["{projectRoot}/src/main.ts"]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "pdftk:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "pdftk:build:development"
        },
        "production": {
          "buildTarget": "pdftk:build:production"
        }
      }
    },
    "lint": {
      "executor": "@container/biomejs:lint",
      "outputs": ["{options.outputFile}"]
    },
    "typecheck": {
      "executor": "@container/tsc:typecheck"
    },
    "docker-test": {
      "executor": "@container/bun:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "dependsOn": ["docker-build-test"],
      "options": {}
    },
    "local-test": {
      "executor": "@container/bun:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "env": {
          "TEST_SERVER_RUNNER": "local"
        }
      }
    },
    "docker-build-test": {
      "executor": "@container/docker:test",
      "dependsOn": ["build"],
      "options": {
        "tag": "philiplehmann/pdftk:test",
        "file": "apps/pdftk/Dockerfile"
      }
    },
    "docker-push": {
      "executor": "@container/docker:build",
      "dependsOn": ["build"],
      "options": {
        "platforms": ["amd64", "arm64"],
        "tags": ["philiplehmann/pdftk:auto"],
        "file": "apps/pdftk/Dockerfile"
      }
    },
    "docker-run": {
      "executor": "@container/docker:run",
      "dependsOn": ["build"],
      "options": {
        "image": "philiplehmann/pdftk:run",
        "file": "apps/pdftk/Dockerfile",
        "port": ["3000"]
      }
    }
  },
  "tags": []
}
