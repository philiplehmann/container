# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build tesseract`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t philiplehmann/tesseract`.
FROM oven/bun:1.3.9-slim

ENV HOST=0.0.0.0
ENV PORT=3000

ARG TESSERACT_VERSION
ARG TESSERACT_LOCALE_VERSION

LABEL org.opencontainers.image.authors="philiplehmann@gmail.com"

RUN --mount=type=cache,target=/var/lib/apt/lists,sharing=locked \
    --mount=type=cache,target=/var/cache/apt,sharing=locked \
    rm -f /etc/apt/apt.conf.d/docker-clean && \
    apt-get update && \
    apt-get install --no-install-recommends --yes \
                    tesseract-ocr=${TESSERACT_VERSION} \
                    tesseract-ocr-deu=${TESSERACT_LOCALE_VERSION} \
                    tesseract-ocr-fra=${TESSERACT_LOCALE_VERSION} \
                    tesseract-ocr-eng=${TESSERACT_LOCALE_VERSION} \
                    imagemagick

WORKDIR /app

COPY dist/apps/tesseract tesseract

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN bun install --production --cwd tesseract

USER 1000:1000

CMD [ "bun", "tesseract" ]
