{
  "name": "unoserver",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/unoserver/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@container/bun:build",
      "options": {
        "entrypoints": ["{projectRoot}/src/main.ts"]
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "unoserver:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "unoserver:build:development"
        },
        "production": {
          "buildTarget": "unoserver:build:production"
        }
      }
    },
    "lint": {
      "executor": "@container/biomejs:lint",
      "outputs": ["{options.outputFile}"]
    },
    "typecheck": {
      "executor": "@container/tsc:typecheck"
    },
    "bun-test": {
      "executor": "@container/bun:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "dependsOn": ["docker-test"],
      "options": {}
    },
    "bun-test-local": {
      "executor": "@container/bun:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {}
    },
    "test": {
      "executor": "@container/helper:empty",
      "dependsOn": ["bun-test"],
      "options": {}
    },
    "test-local": {
      "executor": "@container/helper:empty",
      "dependsOn": ["bun-test-local"],
      "options": {}
    },
    "docker-test": {
      "executor": "@container/docker:test",
      "dependsOn": ["build"],
      "options": {
        "tag": "philiplehmann/unoserver:test",
        "file": "apps/unoserver/Dockerfile"
      }
    },
    "docker-push": {
      "executor": "@container/docker:build",
      "dependsOn": ["build"],
      "options": {
        "platforms": ["amd64", "arm64"],
        "tags": ["philiplehmann/unoserver:auto"],
        "file": "apps/unoserver/Dockerfile"
      }
    },
    "docker-run": {
      "executor": "@container/docker:run",
      "dependsOn": ["build"],
      "options": {
        "image": "philiplehmann/unoserver:run",
        "file": "apps/unoserver/Dockerfile",
        "port": ["3000"]
      }
    }
  },
  "tags": []
}
