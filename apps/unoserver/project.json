{
  "name": "unoserver",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/unoserver/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@container/bun:build",
      "options": {
        "entrypoints": ["{projectRoot}/src/main.ts"]
      }
    },
    "serve": {
      "executor": "@container/bun:serve"
    },
    "lint": {
      "executor": "@container/biomejs:lint",
      "outputs": ["{options.outputFile}"]
    },
    "typecheck": {
      "executor": "@container/tsc:typecheck"
    },
    "docker-test": {
      "executor": "@container/bun:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "dependsOn": ["docker-build-test"],
      "options": {}
    },
    "local-test": {
      "executor": "@container/bun:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "env": {
          "TEST_SERVER_RUNNER": "local"
        }
      }
    },
    "docker-build-test": {
      "executor": "@container/docker:test",
      "dependsOn": ["build"],
      "options": {
        "tag": "philiplehmann/unoserver:test",
        "file": "apps/unoserver/Dockerfile"
      }
    },
    "docker-push": {
      "executor": "@container/docker:build",
      "dependsOn": ["build"],
      "options": {
        "platforms": ["amd64", "arm64"],
        "tags": ["philiplehmann/unoserver:auto"],
        "file": "apps/unoserver/Dockerfile"
      }
    },
    "docker-run": {
      "executor": "@container/docker:run",
      "dependsOn": ["build"],
      "options": {
        "image": "philiplehmann/unoserver:run",
        "file": "apps/unoserver/Dockerfile",
        "port": ["3000"]
      }
    }
  },
  "tags": []
}
