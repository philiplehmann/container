{
  "name": "unoserver",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/unoserver/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/unoserver",
        "format": [
          "cjs"
        ],
        "bundle": false,
        "main": "apps/unoserver/src/main.ts",
        "tsConfig": "apps/unoserver/tsconfig.app.json",
        "assets": [
          "apps/unoserver/src/assets"
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "unoserver:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "unoserver:build:development"
        },
        "production": {
          "buildTarget": "unoserver:build:production"
        }
      }
    },
    "lint": {
      "executor": "@container/biomejs:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "dependsOn": [
        "docker-test"
      ],
      "options": {}
    },
    "docker-test": {
      "executor": "@container/docker:test",
      "dependsOn": [
        "build"
      ],
      "options": {
        "platforms": [
          "amd",
          "arm"
        ],
        "tag": "philiplehmann/unoserver:test",
        "file": "apps/unoserver/Dockerfile"
      }
    },
    "docker-push": {
      "executor": "@container/docker:build",
      "dependsOn": [
        "build"
      ],
      "options": {
        "platforms": [
          "amd",
          "arm"
        ],
        "tags": [
          "philiplehmann/unoserver:latest",
          "philiplehmann/unoserver:2.0.1"
        ],
        "file": "apps/unoserver/Dockerfile"
      }
    },
    "docker-run": {
      "executor": "@container/docker:run",
      "dependsOn": [
        "build"
      ],
      "options": {
        "image": "philiplehmann/unoserver:run",
        "file": "apps/unoserver/Dockerfile",
        "port": [
          "3000"
        ]
      }
    }
  },
  "tags": []
}
