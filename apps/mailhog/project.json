{
  "name": "mailhog",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mailhog/src",
  "projectType": "application",
  "targets": {
    "lint": {
      "executor": "@container/biomejs:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "dependsOn": ["docker-test"],
      "options": {}
    },
    "docker-test": {
      "executor": "@container/executors:docker-test",
      "options": {
        "platforms": ["amd", "arm"],
        "tag": "philiplehmann/mailhog:test",
        "file": "apps/mailhog/Dockerfile"
      }
    },
    "docker-push": {
      "executor": "@container/executors:docker-build",
      "options": {
        "platforms": ["amd", "arm"],
        "tags": ["philiplehmann/mailhog:latest", "philiplehmann/mailhog:v1.0.1"],
        "file": "apps/mailhog/Dockerfile"
      }
    },
    "docker-run": {
      "executor": "@container/executors:docker-run",
      "options": {
        "image": "philiplehmann/mailhog:run",
        "file": "apps/mailhog/Dockerfile",
        "port": ["1025", "8025"]
      }
    }
  },
  "tags": []
}
