{
  "name": "poppler",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/poppler/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@container/bun:build",
      "options": {
        "entrypoints": ["{projectRoot}/src/main.ts"]
      }
    },
    "serve": {
      "executor": "@container/bun:serve"
    },
    "lint": {
      "executor": "@container/biomejs:lint",
      "outputs": ["{options.outputFile}"]
    },
    "typecheck": {
      "executor": "@container/tsc:typecheck"
    },
    "docker-test": {
      "executor": "@container/bun:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "dependsOn": ["docker-build-test"],
      "options": {}
    },
    "docker-build-test": {
      "executor": "@container/docker:test",
      "dependsOn": ["build"],
      "options": {
        "tag": "philiplehmann/poppler-server:test",
        "file": "apps/poppler/Dockerfile"
      }
    },
    "docker-push": {
      "executor": "@container/docker:build",
      "dependsOn": ["build"],
      "options": {
        "platforms": ["amd64", "arm64"],
        "tags": ["philiplehmann/poppler-server:auto"],
        "file": "apps/poppler/Dockerfile"
      }
    },
    "docker-run": {
      "executor": "@container/docker:run",
      "dependsOn": ["build"],
      "options": {
        "image": "philiplehmann/poppler-server:run",
        "file": "apps/poppler/Dockerfile",
        "port": ["3000"]
      }
    }
  },
  "tags": []
}
